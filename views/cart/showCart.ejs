<%- include("../partials/header")%>
<%- include("../partials/navbar")%>

<div class="container" style="margin-top: 5rem;">

  <%- include("../partials/flash")%>

  <h6 class="display-6"> <strong>Friend List's</strong> </h6>

  <br>
  <br>
  

  <%for(let item of userCart){%>
        <div class="card mb-3" style="width: 90%;">
          <div class="row g-0">
            <div class="col-md-4">
              <img style="width: 200px;" src="<%=item.img%>" alt="...">
            </div>
            <div class="col-md-8">
              <div class="card-body">
                <h5 class="card-title"><%=item.name%></h5>
                <p class="card-text"></p>
                
                <form action="/user/<%=currentUser._id%>/cart/<%=item._id%>?_method=DELETE" method="post">
                  <button class="btn btn-sm btn-danger">Unfriend</button>
                </form>
                
                
              </div>
            </div>
          </div>
        </div>
      <%}%>
     
    </div>

</div>

<br>
